<odoo>
    <template id="claim_report_template">
        <t t-call="web.basic_layout">
            <div class="page">
                <h2>Claim Report</h2>
                <table class="table table-sm">
                    <tr>
                        <th>Claim ID:</th>
                        <td t-field="doc.name"/>
                    </tr>
                    <tr>
                        <th>Date:</th>
                        <td t-field="doc.date"/>
                    </tr>
                    <tr>
                        <th>Claimant Name:</th>
                        <td t-field="doc.claimant_id.name"/>
                    </tr>
                    <tr>
                        <th>Claimant Contact:</th>
                        <td>
                            <span t-field="doc.claimant_id.phone"/>
                            /
                            <span t-field="doc.claimant_id.email"/>
                        </td>
                    </tr>
                    <tr>
                        <th>Agency:</th>
                        <td t-field="doc.agency_id.name"/>
                    </tr>
                    <tr>
                        <th>Category:</th>
                        <td t-field="doc.category"/>
                    </tr>
                    <tr>
                        <th>Type:</th>
                        <td t-field="doc.type"/>
                    </tr>
                    <tr>
                        <th>Description:</th>
                        <td t-field="doc.description"/>
                    </tr>
                    <tr>
                        <th>Status:</th>
                        <td t-field="doc.status"/>
                    </tr>
                    <tr>
                        <th>Resolution Date:</th>
                        <td t-field="doc.resolution_date"/>
                    </tr>
                    <tr>
                        <th>Resolved By:</th>
                        <td t-field="doc.responsible_id.name"/>
                    </tr>
                </table>
            </div>
        </t>
    </template>

    <report 
        id="action_claim_report"
        model="your_module_name.claim"
        string="Claim Report"
        report_type="qweb-pdf"
        name="your_module_name.claim_report_template"
        file="your_module_name.claim_report_template"
    />
</odoo>
