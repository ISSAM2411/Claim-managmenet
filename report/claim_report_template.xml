<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Claim Acknowledgement Report Template -->
    <template id="report_claim_acknowledgement">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <h2>Claim Acknowledgement</h2>
                    <p>Reference: <span t-field="doc.name"/></p>
                    <p>Date: <span t-field="doc.date"/></p>
                    <p>Claimant: <span t-field="doc.claimant_id.name"/></p>
                    <p>Agency: <span t-field="doc.agency_id.name"/></p>
                    <p>Subject: <span t-field="doc.subject"/></p>
                    <p>Description: <span t-field="doc.description"/></p>
                </div>
            </t>
        </t>
    </template>

    <!-- Commercial PV Report Template -->
    <template id="report_commercial_pv">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <h2>Commercial PV Report</h2>
                    <p>PV Date: <span t-field="doc.commercial_pv_date"/></p>
                    <p>PV Details: <span t-field="doc.commercial_pv"/></p>
                    <p>Decision: <span t-field="doc.commercial_decision"/></p>
                    <p>Claim Reference: <span t-field="doc.name"/></p>
                </div>
            </t>
        </t>
    </template>
</odoo>