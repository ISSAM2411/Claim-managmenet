<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Define paper format -->
    <record id="paperformat_claim_reports" model="report.paperformat">
        <field name="name">Claim Reports Paper Format</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">30</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">35</field>
    </record>

    <!-- Claim Acknowledgment Report -->
    <record id="action_claim_acknowledgment" model="ir.actions.report">
        <field name="name">Acknowledgment Receipt</field>
        <field name="model">claim.claim</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">claim_management.claim_acknowledgment</field>
        <field name="report_file">claim_management.claim_acknowledgment</field>
        <field name="print_report_name">'Claim Acknowledgment - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_claim_claim"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_claim_reports"/>
    </record>

    <template id="claim_acknowledgment">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center">Claim Acknowledgment Receipt</h2>
                        <div class="row mt-4">
                            <div class="col-6">
                                <p><strong>Reference:</strong> <span t-field="doc.name"/></p>
                                <p><strong>Date:</strong> <span t-field="doc.date"/></p>
                                <p><strong>Subject:</strong> <span t-field="doc.subject"/></p>
                            </div>
                            <div class="col-6">
                                <p><strong>Claimant:</strong> <span t-field="doc.claimant_id.name"/></p>
                                <p><strong>Agency:</strong> <span t-field="doc.agency_id.name"/></p>
                                <p><strong>Type:</strong> <span t-field="doc.type"/></p>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-12">
                                <h4>Description</h4>
                                <p t-field="doc.description"/>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- Commercial PV Report -->
    <record id="action_commercial_pv" model="ir.actions.report">
        <field name="name">Commercial PV</field>
        <field name="model">claim.claim</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">claim_management.commercial_pv</field>
        <field name="report_file">claim_management.commercial_pv</field>
        <field name="print_report_name">'Commercial PV - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_claim_claim"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_claim_reports"/>
    </record>

    <template id="commercial_pv">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center">Commercial PV Report</h2>
                        <div class="row mt-4">
                            <div class="col-6">
                                <p><strong>Reference:</strong> <span t-field="doc.name"/></p>
                                <p><strong>Date:</strong> <span t-field="doc.commercial_pv_date"/></p>
                                <p><strong>Claimant:</strong> <span t-field="doc.claimant_id.name"/></p>
                            </div>
                            <div class="col-6">
                                <p><strong>Agency:</strong> <span t-field="doc.agency_id.name"/></p>
                                <p><strong>Agent:</strong> <span t-field="doc.customer_service_agent_id.name"/></p>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-12">
                                <h4>Commercial PV</h4>
                                <p t-field="doc.commercial_pv"/>
                                
                                <h4 class="mt-4">Commercial Decision</h4>
                                <p t-field="doc.commercial_decision"/>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>