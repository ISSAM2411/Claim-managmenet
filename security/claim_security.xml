<odoo>
    <data noupdate="1">
        <!-- Access for Admin -->
        <record id="access_claim_admin" model="ir.model.access">
            <field name="name">claim.access.admin</field>
            <field name="model_id" ref="model_your_module_name_claim"/>
            <field name="group_id" ref="base.group_system"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

        <!-- Access for Claim Manager -->
        <record id="access_claim_manager" model="ir.model.access">
            <field name="name">claim.access.manager</field>
            <field name="model_id" ref="model_your_module_name_claim"/>
            <field name="group_id" ref="your_module_name.group_claim_manager"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <!-- Access for Claim User -->
        <record id="access_claim_user" model="ir.model.access">
            <field name="name">claim.access.user</field>
            <field name="model_id" ref="model_your_module_name_claim"/>
            <field name="group_id" ref="your_module_name.group_claim_user"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <!-- Groups for Claim Management -->
        <record id="group_claim_manager" model="res.groups">
            <field name="name">Claim Manager</field>
        </record>
        <record id="group_claim_user" model="res.groups">
            <field name="name">Claim User</field>
        </record>
    </data>
</odoo>
