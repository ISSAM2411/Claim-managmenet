<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!-- Category -->
        <record id="module_claim_management_category" model="ir.module.category">
            <field name="name">Claim Management</field>
            <field name="description">User access level for claim management module</field>
            <field name="sequence">20</field>
        </record>

        <!-- Groups -->
        <record id="group_claim_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_claim_management_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_claim_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_claim_management_category"/>
            <field name="implied_ids" eval="[(4, ref('group_claim_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <!-- Record Rules -->
        <!-- Project Rules -->
        <record id="claim_project_manager_rule" model="ir.rule">
            <field name="name">Claim Manager: Full Access to Projects</field>
            <field name="model_id" ref="project.model_project_project"/>
            <field name="groups" eval="[(4, ref('group_claim_manager'))]"/>
            <field name="domain_force">[]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="claim_project_user_rule" model="ir.rule">
            <field name="name">Claim User: Read-only Access to Projects</field>
            <field name="model_id" ref="project.model_project_project"/>
            <field name="groups" eval="[(4, ref('group_claim_user'))]"/>
            <field name="domain_force">[]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Claim Rules -->
        <record id="claim_user_rule" model="ir.rule">
            <field name="name">Claim User: Access Own Agency Claims</field>
            <field name="model_id" ref="claim_management.model_claim_claim"/>
            <field name="groups" eval="[(4, ref('group_claim_user'))]"/>
            <field name="domain_force">[('agency_id', '=', user.employee_id.agency_id.id)]</field>
        </record>

        <record id="claim_manager_rule" model="ir.rule">
            <field name="name">Claim Manager: Access All Claims</field>
            <field name="model_id" ref="claim_management.model_claim_claim"/>
            <field name="groups" eval="[(4, ref('group_claim_manager'))]"/>
            <field name="domain_force">[]</field>
        </record>

        <!-- Agency Rules -->
        <record id="agency_user_rule" model="ir.rule">
            <field name="name">Agency User: Read Own Agency</field>
            <field name="model_id" ref="claim_management.model_claim_agency"/>
            <field name="groups" eval="[(4, ref('group_claim_user'))]"/>
            <field name="domain_force">[('id', '=', user.employee_id.agency_id.id)]</field>
        </record>

        <record id="agency_manager_rule" model="ir.rule">
            <field name="name">Agency Manager: Access All Agencies</field>
            <field name="model_id" ref="claim_management.model_claim_agency"/>
            <field name="groups" eval="[(4, ref('group_claim_manager'))]"/>
            <field name="domain_force">[]</field>
        </record>

        <!-- Claimant Rules -->
        <record id="claimant_user_rule" model="ir.rule">
            <field name="name">Claimant User: Access Agency Claimants</field>
            <field name="model_id" ref="claim_management.model_claim_claimant"/>
            <field name="groups" eval="[(4, ref('group_claim_user'))]"/>
            <field name="domain_force">[('claim_ids.agency_id', '=', user.employee_id.agency_id.id)]</field>
        </record>

        <record id="claimant_manager_rule" model="ir.rule">
            <field name="name">Claimant Manager: Access All Claimants</field>
            <field name="model_id" ref="claim_management.model_claim_claimant"/>
            <field name="groups" eval="[(4, ref('group_claim_manager'))]"/>
            <field name="domain_force">[]</field>
        </record>
    </data>
</odoo>