<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Define groups first -->
        <record id="group_claim_manager" model="res.groups">
            <field name="name">Claim Manager</field>
            <field name="category_id" ref="base.module_category_services"/>
            <!-- Add implied rights -->
            <field name="implied_ids" eval="[(4, ref('project.group_project_user')), (4, ref('hr.group_hr_user'))]"/>
        </record>

        <record id="group_claim_user" model="res.groups">
            <field name="name">Claim User</field>
            <field name="category_id" ref="base.module_category_services"/>
            <!-- Add implied rights -->
            <field name="implied_ids" eval="[(4, ref('project.group_project_user')), (4, ref('hr.group_hr_user'))]"/>
        </record>

        <!-- Access Rights for Claim model -->
        <record id="access_claim_admin" model="ir.model.access">
            <field name="name">claim.access.admin</field>
            <field name="model_id" ref="model_claim_claim"/>
            <field name="group_id" ref="base.group_system"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

        <!-- Add record rules for inherited models -->
        <record id="rule_claim_employee" model="ir.rule">
            <field name="name">Employee Claim Access</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('group_claim_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="rule_claim_project" model="ir.rule">
            <field name="name">Project Claim Access</field>
            <field name="model_id" ref="project.model_project_project"/>
            <field name="domain_force">['|',('user_id','=',user.id),('member_ids','in',user.id)]</field>
            <field name="groups" eval="[(4, ref('group_claim_user'))]"/>
        </record>

        <!-- Add other access rights for your new models (claim, claimant, agency, communication) -->
    </data>
</odoo>