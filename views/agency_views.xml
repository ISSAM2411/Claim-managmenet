<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_agency_form" model="ir.ui.view">
            <field name="name">claim.agency.form</field>
            <field name="model">claim.agency</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nom de l'agence"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="phone"/>
                                <field name="manager_id"/>
                            </group>
                            <group>
                                <field name="address"/>
                                <field name="city"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="EmployÃ©s">
                                <field name="employee_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="first_name"/>
                                        <field name="role"/>
                                        <field name="phone"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_agency_tree" model="ir.ui.view">
            <field name="name">claim.agency.tree</field>
            <field name="model">claim.agency</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="city"/>
                    <field name="manager_id"/>
                    <field name="phone"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
