<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Agency Tree View -->
    <record id="view_agency_tree" model="ir.ui.view">
        <field name="name">claim.agency.tree</field>
        <field name="model">claim.agency</field>
        <field name="arch" type="xml">
            <tree decoration-muted="active == False" default_order="name asc">
                <field name="active" invisible="1"/>
                <field name="name"/>
                <field name="code"/>
                <field name="city"/>
                <field name="phone"/>
                <field name="manager_id"/>
            </tree>
        </field>
    </record>

    <!-- Agency Form View -->
    <record id="view_agency_form" model="ir.ui.view">
        <field name="name">claim.agency.form</field>
        <field name="model">claim.agency</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Agency Name" required="1"/>
                        </h1>
                        <h2>
                            <field name="code" placeholder="Agency Code" required="1"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="manager_id"/>
                            <field name="phone" widget="phone"/>
                        </group>
                        <group>
                            <field name="city"/>
                            <field name="address"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Employees" name="employees">
                            <field name="employee_ids" context="{'default_agency_id': active_id}">
                                <tree>
                                    <field name="name"/>
                                    <field name="role"/>
                                    <field name="phone"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Agency Kanban View -->
    <record id="view_agency_kanban" model="ir.ui.view">
        <field name="name">claim.agency.kanban</field>
        <field name="model">claim.agency</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="name"/>
                <field name="code"/>
                <field name="city"/>
                <field name="phone"/>
                <field name="manager_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="code"/>
                                </div>
                                <div class="mt-2">
                                    <div t-if="record.city.value">
                                        <i class="fa fa-map-marker"/> <field name="city"/>
                                    </div>
                                    <div t-if="record.phone.value">
                                        <i class="fa fa-phone"/> <field name="phone"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_right">
                                        <field name="manager_id" widget="many2one_avatar"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Agency Search View -->
    <record id="view_agency_search" model="ir.ui.view">
        <field name="name">claim.agency.search</field>
        <field name="model">claim.agency</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"
                       filter_domain="['|', '|', ('name', 'ilike', self), ('code', 'ilike', self), ('city', 'ilike', self)]"/>
                <field name="code"/>
                <field name="city"/>
                <field name="manager_id"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Without Manager" name="no_manager" domain="[('manager_id', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Manager" name="manager" context="{'group_by': 'manager_id'}"/>
                    <filter string="City" name="city" context="{'group_by': 'city'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Agency Action Window -->
    <record id="action_agency_list" model="ir.actions.act_window">
        <field name="name">Agencies</field>
        <field name="res_model">claim.agency</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_agency_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first agency
            </p>
            <p>
                Agencies help you organize your claims management structure.
                Each agency can have its own manager and team of employees.
            </p>
        </field>
    </record>
</odoo>