<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Claim Tree View -->
    <record id="view_claim_tree" model="ir.ui.view">
        <field name="name">claim.claim.tree</field>
        <field name="model">claim.claim</field>
        <field name="arch" type="xml">
            <tree decoration-danger="urgent==True" decoration-warning="state=='submitted'" decoration-success="state=='resolved'" decoration-info="state=='in_progress'" decoration-muted="state in ('closed','archived')" default_order="date desc, id desc">
                <field name="name"/>
                <field name="date"/>
                <field name="subject"/>
                <field name="claimant_id"/>
                <field name="agency_id"/>
                <field name="type"/>
                <field name="urgent"/>
                <field name="gravity"/>
                <field name="state"/>
                <field name="customer_service_agent_id"/>
            </tree>
        </field>
    </record>

    <!-- Claim Kanban View -->
    <record id="view_claim_kanban" model="ir.ui.view">
        <field name="name">claim.claim.kanban</field>
        <field name="model">claim.claim</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" sample="1">
                <field name="name"/>
                <field name="date"/>
                <field name="subject"/>
                <field name="claimant_id"/>
                <field name="agency_id"/>
                <field name="type"/>
                <field name="urgent"/>
                <field name="gravity"/>
                <field name="state"/>
                <field name="customer_service_agent_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div>
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/> - <field name="subject"/>
                                    </strong>
                                </div>
                                <div class="text-muted">
                                    <field name="date"/>
                                </div>
                                <div class="mt-2">
                                    <strong>Claimant: </strong><field name="claimant_id"/>
                                </div>
                                <div>
                                    <strong>Agency: </strong><field name="agency_id"/>
                                </div>
                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_left">
                                        <span t-if="record.urgent.raw_value" class="badge badge-danger">
                                            Urgent
                                        </span>
                                        <span t-att-class="'badge badge-' + (record.gravity.raw_value === 'high' ? 'danger' : record.gravity.raw_value === 'medium' ? 'warning' : 'success')">
                                            <field name="gravity"/>
                                        </span>
                                        <span t-att-class="'badge badge-' + (record.type.raw_value === 'technical' ? 'info' : 'primary')">
                                            <field name="type"/>
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="customer_service_agent_id" widget="many2one_avatar"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Claim Form View -->
    <record id="view_claim_form" model="ir.ui.view">
        <field name="name">claim.claim.form</field>
        <field name="model">claim.claim</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit" string="Submit" type="object" states="draft" class="oe_highlight"/>
                    <button name="action_start_processing" string="Start Processing" type="object" states="submitted" class="oe_highlight"/>
                    <button name="action_resolve" string="Mark as Resolved" type="object" states="in_progress" class="oe_highlight"/>
                    <button name="action_close" string="Close" type="object" states="resolved" class="oe_highlight"/>
                    <button name="action_archive" string="Archive" type="object" states="closed"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,in_progress,resolved,closed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_communications" type="object" class="oe_stat_button" icon="fa-comments">
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_text">Communications</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <h2>
                            <field name="subject" placeholder="Claim Subject"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="claimant_id"/>
                            <field name="agency_id"/>
                            <field name="project_id"/>
                        </group>
                        <group>
                            <field name="customer_service_agent_id"/>
                            <field name="type"/>
                            <field name="urgent"/>
                            <field name="complexity"/>
                            <field name="gravity"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details" name="details">
                            <group>
                                <group>
                                    <field name="origin"/>
                                    <field name="source"/>
                                </group>
                            </group>
                            <separator string="Description"/>
                            <field name="description" placeholder="Detailed description of the claim..."/>
                        </page>
                        <page string="Commercial Information" name="commercial" attrs="{'invisible': [('type', '!=', 'commercial')]}">
                            <group>
                                <field name="commercial_pv"/>
                                <field name="commercial_decision"/>
                                <field name="commercial_pv_date"/>
                            </group>
                        </page>
                        <page string="Customer Satisfaction" name="satisfaction" attrs="{'invisible': [('state', 'not in', ['resolved', 'closed', 'archived'])]}">
                            <group>
                                <group>
                                    <field name="satisfaction_score" widget="priority"/>
                                    <field name="satisfaction_comment"/>
                                </group>
                            </group>
                        </page>
                        <page string="Documents" name="documents">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Claim Calendar View -->
    <record id="view_claim_calendar" model="ir.ui.view">
        <field name="name">claim.claim.calendar</field>
        <field name="model">claim.claim</field>
        <field name="arch" type="xml">
            <calendar string="Claims" date_start="date" color="state" quick_add="False">
                <field name="name"/>
                <field name="claimant_id"/>
                <field name="subject"/>
                <field name="type"/>
                <field name="urgent"/>
            </calendar>
        </field>
    </record>

    <!-- Claim Search View -->
    <record id="view_claim_search" model="ir.ui.view">
        <field name="name">claim.claim.search</field>
        <field name="model">claim.claim</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="subject"/>
                <field name="claimant_id"/>
                <field name="agency_id"/>
                <field name="customer_service_agent_id"/>
                <field name="description"/>
                <separator/>
                <filter string="My Claims" name="my_claims" domain="[('customer_service_agent_id.user_id', '=', uid)]"/>
                <filter string="Urgent Claims" name="urgent" domain="[('urgent', '=', True)]"/>
                <separator/>
                <filter string="Technical" name="technical" domain="[('type', '=', 'technical')]"/>
                <filter string="Commercial" name="commercial" domain="[('type', '=', 'commercial')]"/>
                <separator/>
                <filter string="High Gravity" name="high_gravity" domain="[('gravity', '=', 'high')]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Resolved" name="resolved" domain="[('state', '=', 'resolved')]"/>
                <filter string="Closed" name="closed" domain="[('state', '=', 'closed')]"/>
                <filter string="Archived" name="archived" domain="[('state', '=', 'archived')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="state" context="{'group_by': 'state'}"/>
                    <filter string="Agency" name="agency" context="{'group_by': 'agency_id'}"/>
                    <filter string="Type" name="type" context="{'group_by': 'type'}"/>
                    <filter string="Date" name="date" context="{'group_by': 'date'}"/>
                    <filter string="Agent" name="agent" context="{'group_by': 'customer_service_agent_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Claim Action Window -->
    <record id="action_claim_list" model="ir.actions.act_window">
        <field name="name">Claims</field>
        <field name="res_model">claim.claim</field>
        <field name="view_mode">kanban,tree,form,calendar</field>
        <field name="search_view_id" ref="view_claim_search"/>
        <field name="context">{
            'search_default_draft': 1,
            'search_default_submitted': 1,
            'search_default_in_progress': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first claim
            </p>
            <p>
                Track and manage customer claims efficiently.
                You can categorize them, assign them to agents,
                and follow their progress through different stages.
            </p>
        </field>
    </record>
</odoo>