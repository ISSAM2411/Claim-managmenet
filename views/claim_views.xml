<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Claim Tree View -->
    <record id="view_claim_tree" model="ir.ui.view">
        <field name="name">claim.claim.tree</field>
        <field name="model">claim.claim</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" 
                  decoration-warning="state == 'in_progress'" 
                  decoration-success="state == 'resolved'" 
                  decoration-muted="state == 'archived'">
                <field name="name"/>
                <field name="date"/>
                <field name="claimant_id"/>
                <field name="subject"/>
                <field name="type"/>
                <field name="urgent"/>
                <field name="agency_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Claim Form View -->
    <record id="view_claim_form" model="ir.ui.view">
        <field name="name">claim.claim.form</field>
        <field name="model">claim.claim</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit" string="Submit" type="object" 
                            states="draft" class="oe_highlight"/>
                    <button name="action_start_processing" string="Start Processing" 
                            type="object" states="submitted" class="oe_highlight"/>
                    <button name="action_resolve" string="Mark as Resolved" 
                            type="object" states="in_progress" class="oe_highlight"/>
                    <button name="action_close" string="Close" 
                            type="object" states="resolved" class="oe_highlight"/>
                    <button name="action_archive" string="Archive" 
                            type="object" states="closed"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_project" type="object" class="oe_stat_button" 
                                icon="fa-tasks" attrs="{'invisible': [('project_id', '=', False)]}">
                            <field name="project_id" string="Project"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="claimant_id"/>
                            <field name="agency_id"/>
                            <field name="origin"/>
                            <field name="source"/>
                        </group>
                        <group>
                            <field name="type"/>
                            <field name="urgent"/>
                            <field name="complexity"/>
                            <field name="gravity"/>
                            <field name="customer_service_agent_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="subject"/>
                                <field name="description"/>
                            </group>
                        </page>
                        <page string="Commercial Process" attrs="{'invisible': [('type', '!=', 'commercial')]}">
                            <group>
                                <field name="commercial_pv"/>
                                <field name="commercial_decision"/>
                                <field name="commercial_pv_date"/>
                            </group>
                        </page>
                        <page string="Customer Satisfaction" attrs="{'invisible': [('state', 'not in', ['resolved','closed','archived'])]}">
                            <group>
                                <field name="satisfaction_score"/>
                                <field name="satisfaction_comment"/>
                            </group>
                        </page>
                        <page string="Attachments">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Claim Search View -->
    <record id="view_claim_search" model="ir.ui.view">
        <field name="name">claim.claim.search</field>
        <field name="model">claim.claim</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="claimant_id"/>
                <field name="subject"/>
                <field name="agency_id"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state','=','in_progress')]"/>
                <filter string="Resolved" name="resolved" domain="[('state','=','resolved')]"/>
                <filter string="Urgent" name="urgent" domain="[('urgent','=',True)]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Type" name="group_type" context="{'group_by':'type'}"/>
                    <filter string="Agency" name="group_agency" context="{'group_by':'agency_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Claim Action Window -->
    <record id="action_claim_list" model="ir.actions.act_window">
        <field name="name">Claims</field>
        <field name="res_model">claim.claim</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first claim
            </p>
        </field>
    </record>
</odoo>