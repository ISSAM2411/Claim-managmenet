<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Claimant Tree View -->
    <record id="view_claimant_tree" model="ir.ui.view">
        <field name="name">claim.claimant.tree</field>
        <field name="model">claim.claimant</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="first_name"/>
                <field name="type"/>
                <field name="company_name"/>
                <field name="city"/>
                <field name="phone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <!-- Claimant Form View -->
    <record id="view_claimant_form" model="ir.ui.view">
        <field name="name">claim.claimant.form</field>
        <field name="model">claim.claimant</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="first_name"/>
                            <field name="type"/>
                            <field name="company_name" attrs="{'invisible': [('type', '!=', 'company')], 'required': [('type', '=', 'company')]}"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="city"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Address">
                            <field name="address"/>
                        </page>
                        <page string="Claims">
                            <field name="claim_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="subject"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Additional Information">
                            <field name="additional_info"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Claimant Action Window -->
    <record id="action_claimant_list" model="ir.actions.act_window">
        <field name="name">Claimants</field>
        <field name="res_model">claim.claimant</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first claimant
            </p>
        </field>
    </record>
</odoo>