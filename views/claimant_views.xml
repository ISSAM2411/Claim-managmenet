<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_claimant_form" model="ir.ui.view">
            <field name="name">claim.claimant.form</field>
            <field name="model">claim.claimant</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_archive" string="Archiver" type="object"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="first_name"/>
                                <field name="company_name"/>
                                <field name="type"/>
                                <field name="email"/>
                            </group>
                            <group>
                                <field name="phone"/>
                                <field name="address"/>
                                <field name="city"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="RÃ©clamations">
                                <field name="claim_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_claimant_tree" model="ir.ui.view">
            <field name="name">claim.claimant.tree</field>
            <field name="model">claim.claimant</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="first_name"/>
                    <field name="company_name"/>
                    <field name="type"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="city"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_claimant_search" model="ir.ui.view">
            <field name="name">claim.claimant.search</field>
            <field name="model">claim.claimant</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="first_name"/>
                    <field name="company_name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="city"/>
                    <group expand="1" string="Group By">
                        <filter name="group_by_type" string="Type" context="{'group_by': 'type'}"/>
                        <filter name="group_by_city" string="Ville" context="{'group_by': 'city'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>