<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Claimant Tree View -->
    <record id="view_claimant_tree" model="ir.ui.view">
        <field name="name">claim.claimant.tree</field>
        <field name="model">claim.claimant</field>
        <field name="arch" type="xml">
            <tree decoration-muted="active == False" default_order="name asc">
                <field name="active" invisible="1"/>
                <field name="name"/>
                <field name="first_name"/>
                <field name="type"/>
                <field name="company_name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="city"/>
            </tree>
        </field>
    </record>

    <!-- Claimant Form View -->
    <record id="view_claimant_form" model="ir.ui.view">
        <field name="name">claim.claimant.form</field>
        <field name="model">claim.claimant</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="type" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                        </button>
                        <button name="action_view_claims" type="object" class="oe_stat_button" icon="fa-file-text-o">
                            <field name="claim_count" widget="statinfo" string="Claims"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name" required="1"/>
                        </h1>
                        <h2 attrs="{'invisible': [('type', '!=', 'citizen')]}">
                            <field name="first_name" placeholder="First Name"/>
                        </h2>
                        <h2 attrs="{'invisible': [('type', '!=', 'company')]}">
                            <field name="company_name" placeholder="Company Name"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="phone" widget="phone"/>
                            <field name="email" widget="email"/>
                            <field name="city"/>
                        </group>
                        <group>
                            <field name="address"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Claims History" name="claims">
                            <field name="claim_ids" readonly="1">
                                <tree decoration-danger="urgent==True" decoration-warning="state=='submitted'" decoration-success="state=='resolved'" decoration-info="state=='in_progress'" decoration-muted="state in ('closed','archived')">
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="subject"/>
                                    <field name="type"/>
                                    <field name="urgent"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Additional Information" name="additional_info">
                            <field name="additional_info" placeholder="Add any additional notes or information about the claimant..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Claimant Kanban View -->
    <record id="view_claimant_kanban" model="ir.ui.view">
        <field name="name">claim.claimant.kanban</field>
        <field name="model">claim.claimant</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="name"/>
                <field name="first_name"/>
                <field name="company_name"/>
                <field name="type"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="city"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                    <small t-if="record.first_name.value"> - <field name="first_name"/></small>
                                </strong>
                                <div t-if="record.company_name.value" class="text-muted">
                                    <field name="company_name"/>
                                </div>
                                <div class="o_kanban_tags_section mt-2">
                                    <span t-attf-class="badge badge-#{record.type.raw_value == 'company' ? 'primary' : 'info'}">
                                        <field name="type"/>
                                    </span>
                                </div>
                                <div class="mt-2">
                                    <div t-if="record.phone.value">
                                        <i class="fa fa-phone"/> <field name="phone"/>
                                    </div>
                                    <div t-if="record.email.value">
                                        <i class="fa fa-envelope"/> <field name="email"/>
                                    </div>
                                    <div t-if="record.city.value">
                                        <i class="fa fa-map-marker"/> <field name="city"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Claimant Search View -->
    <record id="view_claimant_search" model="ir.ui.view">
        <field name="name">claim.claimant.search</field>
        <field name="model">claim.claimant</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"
                       filter_domain="['|', '|', '|', '|', 
                                     ('name', 'ilike', self),
                                     ('first_name', 'ilike', self),
                                     ('company_name', 'ilike', self),
                                     ('email', 'ilike', self),
                                     ('phone', 'ilike', self)]"/>
                <field name="city"/>
                <field name="email"/>
                <field name="phone"/>
                <separator/>
                <filter string="Citizens" name="type_citizen" domain="[('type', '=', 'citizen')]"/>
                <filter string="Companies" name="type_company" domain="[('type', '=', 'company')]"/>
                <separator/>
                <filter string="Has Claims" name="has_claims" domain="[('claim_ids', '!=', False)]"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="group_type" context="{'group_by': 'type'}"/>
                    <filter string="City" name="group_city" context="{'group_by': 'city'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Claimant Action Window -->
    <record id="action_claimant_list" model="ir.actions.act_window">
        <field name="name">Claimants</field>
        <field name="res_model">claim.claimant</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_claimant_search"/>
        <field name="context">{
            'search_default_active': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first claimant
            </p>
            <p>
                Create a claimant record to manage claims from citizens or companies.
                You can track their contact information and claim history.
            </p>
        </field>
    </record>
</odoo>