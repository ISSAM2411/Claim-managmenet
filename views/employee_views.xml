<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_employee_form" model="ir.ui.view">
            <field name="name">claim.employee.form</field>
            <field name="model">claim.employee</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nom"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="first_name"/>
                                <field name="role"/>
                                <field name="agency_id"/>
                            </group>
                            <group>
                                <field name="phone"/>
                                <field name="email"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_employee_tree" model="ir.ui.view">
            <field name="name">claim.employee.tree</field>
            <field name="model">claim.employee</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="first_name"/>
                    <field name="role"/>
                    <field name="agency_id"/>
                    <field name="phone"/>
                    <field name="email"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_employee_search" model="ir.ui.view">
            <field name="name">claim.employee.search</field>
            <field name="model">claim.employee</field>
            <field name="arch" type="xml">
                <search string="Rechercher un employé">
                    <field name="name"/>
                    <field name="first_name"/>
                    <field name="agency_id"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <separator/>
                    <filter string="Agents Clientèle" name="customer_service" domain="[('role', '=', 'customer_service')]"/>
                    <filter string="Techniciens" name="technician" domain="[('role', '=', 'technician')]"/>
                    <filter string="Commerciaux" name="commercial" domain="[('role', '=', 'commercial')]"/>
                    <filter string="Responsables" name="manager" domain="[('role', '=', 'manager')]"/>
                    <filter string="Cellule de veille" name="monitoring" domain="[('role', '=', 'monitoring')]"/>
                    <separator/>
                    <filter string="Archivé" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Regrouper par">
                        <filter name="group_by_role" string="Rôle" context="{'group_by': 'role'}"/>
                        <filter name="group_by_agency" string="Agence" context="{'group_by': 'agency_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_employee" model="ir.actions.act_window">
            <field name="name">Employés</field>
            <field name="res_model">claim.employee</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_employee_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre premier employé
                </p>
            </field>
        </record>
    </data>
</odoo>