<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Actions -->
        <record id="action_claim" model="ir.actions.act_window">
            <field name="name">Réclamations</field>
            <field name="res_model">claim.claim</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre première réclamation
                </p>
            </field>
        </record>

        <record id="action_claimant" model="ir.actions.act_window">
            <field name="name">Réclamants</field>
            <field name="res_model">claim.claimant</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre premier réclamant
                </p>
            </field>
        </record>

        <record id="action_agency" model="ir.actions.act_window">
            <field name="name">Agences</field>
            <field name="res_model">claim.agency</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre première agence
                </p>
            </field>
        </record>

        <record id="action_employee" model="ir.actions.act_window">
            <field name="name">Employés</field>
            <field name="res_model">claim.employee</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre premier employé
                </p>
            </field>
        </record>

        <!-- Root Menu -->
        <menuitem id="menu_claim_root" 
                  name="Réclamations" 
                  web_icon="claim,static/description/icon.png"
                  sequence="10"/>

        <!-- Main Menus -->
        <menuitem id="menu_claim_main"
                  name="Gestion"
                  parent="menu_claim_root"
                  sequence="10"/>

        <!-- Claims Management Submenus -->
        <menuitem id="menu_claim" 
                  name="Réclamations" 
                  parent="menu_claim_main" 
                  action="action_claim"
                  sequence="10"/>

        <menuitem id="menu_claimant" 
                  name="Réclamants" 
                  parent="menu_claim_main" 
                  action="action_claimant"
                  sequence="20"/>

        <!-- Configuration Menu -->
        <menuitem id="menu_claim_config" 
                  name="Configuration" 
                  parent="menu_claim_root" 
                  sequence="100"/>

        <!-- Configuration Submenus -->
        <menuitem id="menu_agency" 
                  name="Agences" 
                  parent="menu_claim_config" 
                  action="action_agency"
                  sequence="10"/>

        <menuitem id="menu_employee" 
                  name="Employés" 
                  parent="menu_claim_config" 
                  action="action_employee"
                  sequence="20"/>
    </data>
</odoo>